const express = require('express')
const router = express.Router()
const promocaoController = require('../controllers/promocaoController')

// Rota para criar uma nova promoção
router.post('/promocoes', promocaoController.criarPromocao)

// Rota para listar todas as promoções
router.get('/promocoes', promocaoController.listarPromocoes)

// Rota para modificar uma promoção existente
router.put('/promocoes/:id', promocaoController.modificarPromocao)

// Rota para excluir uma promoção
router.delete('/promocoes/:id', promocaoController.excluirPromocao)

module.exports = router
